@using LocalEats.Core
@model Restaurant

<div class="card mb-3">
    <div class="card-header">
        <h3 class="card-title">@Model.Name</h3>
    </div>
    <div class="card-body">
        <p class="card-text">Location: @Model.Location</p>
        <p class="card-text">Cuisine: @Model.Cuisine</p>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail"
           asp-route-restaurantId="@Model.Id" class="btn btn-info">
            Details
        </a>
        <a asp-page="./Edit"
           asp-route-restaurantId="@Model.Id" class="btn btn-info">
            Edit
        </a>
        <a asp-page="./Delete"
           asp-route-restaurantId="@Model.Id" class="btn btn-danger">
            Delete
        </a>
    </div>
</div>